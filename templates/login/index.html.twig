{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}


{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="container">


		<div class="card shadow-lg  mb-5 bg-body mt-5">
			<div class="card-header">

				<h1>
					Connexion</h1>


			</div>
			<div class="card-body media align-items-center  row p-5 g-3">

				<form action="{{ path('app_login') }}" method="post" class="mt-3   ">
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<label for="username" class="form-label">Email:</label>
					<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>

					<label for="password" class="form-label mt-3">Mot de passe:</label>
					<input
					type="password" id="password" name="_password" class="form-control"/>

					{# If you want to control the URL the user is redirected to on success
					        <input type="hidden" name="_target_path" value="/account"/> #}

					<button type="submit" class="btn btn-success mt-3">Connexion</button>
				</form>

			</div>


		{% endblock %}
