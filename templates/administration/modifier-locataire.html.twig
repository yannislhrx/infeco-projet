{% extends 'base.html.twig' %}

{% block title %}Liste Locataires{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: red; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Modifier Locataire</h1>

    {{dump(locataire)}}


 

 

  <form method="post" action="/modifier-locataire/{{locataire.id}}">
     <label for="nom">Nom</label>
    <input type="text" name="nom" id="nom" value="{{locataire.nom}}" required>

    <label for="prenom">Prénom</label>
    <input type="text" name="prenom" id="prenom" value="{{locataire.prenom}}" required>

    <label for="mail ">Email</label>
    <input type="email" name="mail" id="mail" value="{{locataire.mail}}" required>

    <label for="tel">Téléphone</label>
    <input type="tel" name="tel" id="tel" value="{{locataire.tel}}" required>

    
       <button type="submit" value="1" name="modifierLocataire">Modifier</button>
  </form>
    

</div>
{% endblock %}
