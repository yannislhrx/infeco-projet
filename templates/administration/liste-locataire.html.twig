{% extends 'base.html.twig' %}

{% block title %}Liste Locataires{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: red; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Liste Loc✅</h1>

    
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Mail</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Adresse</th>
            </tr>
        </thead>
        <tbody>
          {% for loc in locataires %}
          <tr>
            <td>{{ loc.id }}</td>
            <td>{{ loc.nom }}</td>
            <td>{{ loc.prenom }}</td>
            <td>{{ loc.mail }}</td>
            <td>{{ loc.tel }}</td>
            <td>{{ loc.adresse }}</td>
          
          </tr>
        {% endfor %}
           
        </tbody>
    </table>
    

     <ul>
      
    </ul>
</div>
{% endblock %}
